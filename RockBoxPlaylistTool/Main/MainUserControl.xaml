<UserControl x:Class="RockBoxPlaylistTool.Main.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockBoxPlaylistTool.Main"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="17"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <local:TextToColorConverter x:Key="TextToColorConverter"/>
        </Grid.Resources>
        <Button Grid.Column="1" Grid.Row="1" Command="{Binding AddToPlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5">
            <Image Source="/images/right.png"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" Command="{Binding RemoveFromPlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5">
            <Image Source="/images/left.png"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="3" Command="{Binding MoveSongUpCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5">
            <Image Source="/images/up.png"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="4" Command="{Binding MoveSongDownCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5">
            <Image Source="/images/down.png"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="5" Command="{Binding SavePlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5">
            <Image Source="/images/save.png"/>
        </Button>
        <ContentControl Grid.Column="0" Grid.RowSpan="7" Content="{Binding MusicViewModel}"/>
        <ContentControl Grid.Column="2" Grid.RowSpan="7" Content="{Binding PlaylistViewModel}"/>
        
        <!-- This was STUPID -->
        <TextBlock Grid.Row="7" Grid.ColumnSpan="3" Text="{Binding NotificationText}" Margin="5,0,0,0">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsError}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsError}" Value="False">
                            <Setter Property="Foreground" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
