<UserControl x:Class="RockBoxPlaylistTool.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockBoxPlaylistTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Content="Add" Command="{Binding AddToPlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Remove" Command="{Binding RemoveFromPlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="3" Content="Move Up" Command="{Binding MoveSongUpCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="4" Content="Move Down" Command="{Binding MoveSongDownCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="5" Content="Save Playlist" Command="{Binding SavePlaylistCommand}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <ContentControl Grid.Column="0" Grid.RowSpan="7" Content="{Binding MusicViewModel}"/>
        <ContentControl Grid.Column="2" Grid.RowSpan="7" Content="{Binding PlaylistViewModel}"/>
    </Grid>
</UserControl>
