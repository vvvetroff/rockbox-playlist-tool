<UserControl x:Class="RockBoxPlaylistTool.Data.SongDataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockBoxPlaylistTool.Main"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <local:PercentageConverter x:Key="PercentageConverter"/>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontWeight" Value="Bold">
                </Setter>
            </Style>
        </Grid.Resources>
        <Label Grid.Column="0" Content="{Binding Title}" Style="{StaticResource LabelStyle}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=MusicGrid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
        <Label Grid.Column="1" Content="{Binding Artist}" Style="{StaticResource LabelStyle}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=MusicGrid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
        <Label Grid.Column="2" Content="{Binding Album}" Style="{StaticResource LabelStyle}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=MusicGrid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
    </Grid>
</UserControl>
