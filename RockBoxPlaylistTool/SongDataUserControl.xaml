<UserControl x:Class="RockBoxPlaylistTool.SongDataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockBoxPlaylistTool"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <local:PercentageConverter x:Key="PercentageConverter"/>
        </Grid.Resources>
        <Label Grid.Column="0" Content="{Binding Title}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=grid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
        <Label Grid.Column="1" Content="{Binding Artist}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=grid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
        <Label Grid.Column="2" Content="{Binding AlbumFormatted}" Margin="5" Height="25" Width="{
            Binding Converter={StaticResource PercentageConverter},
            ElementName=grid,
            Path=ActualWidth,
            ConverterParameter=0.3}"/>
    </Grid>
</UserControl>
